
@import '../../style-params.styl';

.container {
  max-width: 700px;
}

p {
  font-size: $font-size--h3;
  line-height: $line-height;
  margin-block-end: 0.3rem;
  max-width: 32em;
}

::ng-deep img {
  margin-bottom: 0px;
}

::ng-deep .ruleBlock {
  margin-top: 2.5rem;
}

::ng-deep .serif {
  font-family: $serif-font-family;
  font-weight: 700;
}

::ng-deep .green {
  color: $color-right;
}

::ng-deep li {
  margin-bottom: 0.5rem;
}
