.container {
  max-width: 700px;
}

.topPanel {
  padding: 0.5rem 0 0;
}

.questionPart {
  width: 100%;
}

.game__close {
  position: absolute;
  width: 2.5em;
  height: 2.5em;
  cursor: pointer;
  top: 0.5em;
  right: 0.5em;
}

.game__close:focus, .game__close:active:focus {
  outline: none;
}

.close_icon {
  width: 2.5rem;
  height: 2.5rem;
}

.footer-wrap {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

