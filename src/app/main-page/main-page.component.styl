$main-margin = 1.5rem;

.game-nav {
  padding: $main-margin;
  margin: $main-margin $main-margin 0 0;
  border-radius: 8px;
  box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.25), 0px -0.5px 1px rgba(0, 0, 0, 0.2);
  background-color: #fff;
  flex: 1 1 350px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.container {
  height: 100%;
  min-height: 100vh;
}

button {
  margin: 1.5rem 0 0;
  align-self: flex-start;
}
