
@import '../../style-params.styl';

$main-margin = 1.5rem;

.game-nav {
  margin: $main-margin $main-margin 0 0;
  border-radius: 8px;
  background-color: #fff;
  flex: 1;
  display: flex;
  flex-direction: column;
  cursor: pointer;
  box-shadow: $main-shadow;
  border: $border;
}

.textBlock {
  padding: $main-margin;
}

.howImage {
  background: url('../../assets/images/game-preview-first.min.png');
}

.timerImage {
  background: url('../../assets/images/game-preview-second.min.png');
}

.dashImage {
  background: url('../../assets/images/game-preview-third.min.png');
}

.game-preview {
  display: none;
  background-size: contain;
  background-color: #fff;
  background-repeat: no-repeat;
  background-position: center;
  width: 100%;
  height: 200px;
  padding: 0;
  margin: 0;
  border-radius: 6px 6px 0 0;
}

.game-nav:hover {
  border: $border-hover;
}

.game-nav:focus, .game-nav:active:focus {
  outline: none;
}

.container {
  justify-content: space-between;
}

button {
  margin: 1.5rem 0 0;
  align-self: flex-start;
}

.svgBlock {
  margin: 2rem;
}

.flexbox {
  flex-wrap: nowrap;
  flex-direction: column;
}

.nowrap {
  flex-wrap: nowrap;
}

@media only screen and (min-width: 1100px) {
  .svgBlock {
    margin: 3rem;
  }

  .flexbox {
    flex-direction: row;
  }

  .game-preview {
    display: block;
  }
}

.flex-column {
  flex-direction: column;
}
