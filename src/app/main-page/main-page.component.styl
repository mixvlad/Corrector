
@import '../../style-params.styl';

$main-margin = 1.5rem;

.game-nav {
  margin: $main-margin $main-margin 0 0;
  border-radius: 8px;
  background-color: #fff;
  flex: 1;
  display: flex;
  flex-direction: column;
  cursor: pointer;
  box-shadow: $main-shadow;
  border: $border;
}

.textBlock {
  padding: $main-margin;
}

.howImage {
  background: url('../../assets/images/game-preview-first.min.png');
}

.timerImage {
  background: url('../../assets/images/game-preview-second.min.png');
}

.dashImage {
  background: url('../../assets/images/game-preview-third.min.png');
}

.game-preview {
  display: none;
  background-size: contain;
  background-color: #fff;
  background-repeat: no-repeat;
  background-position: center;
  width: 100%;
  height: 200px;
  padding: 0;
  margin-top: 8px;
  // border-radius: 6px 6px 0 0;
}

.game-nav:hover {
  border: $border-hover;
}

.disabled:hover {
  // border: $border;
  cursor: default;
}

.game-nav-disabled:hover {
  border: $border;
  cursor: default;
}

.game-nav:focus, .game-nav:active:focus {
  outline: none;
}

.container {
  justify-content: space-between;
}

button {
  margin: 1.5rem 0 0;
  align-self: flex-start;
}

.svgBlock {
  margin: 2rem;
}

.svgBlock ::ng-deep svg {
  height: 32px;
}

.flexbox {
  flex-wrap: nowrap;
  flex-direction: column;
}

.nowrap {
  flex-wrap: nowrap;
}

@media only screen and (min-width: 1100px) {
  .svgBlock {
    margin: 3rem;
  }

  .flexbox {
    flex-direction: row;
  }

  .game-preview {
    display: block;
    border-bottom: $border;
  }
}

.flex-column {
  flex-direction: column;
}

.game-preview ::ng-deep .questionText {
  margin: 0;
  border: none;
  overflow-y: hidden;
}

.game-preview ::ng-deep .questionText {
  font-size: $font-size--h3;
}

.game-preview ::ng-deep .main-content .svgBlock svg {
  height: 10px;
}

.game-preview ::ng-deep .main-content {
  height: 100%;
}

input:focus {
  outline: none;
}

input {
  border-right: none;
  font-size: $font-size--small;
}

form {
  display: flex;
}

form button {
  margin: 0;
  border: $border;
  border-radius: 0 5px 5px 0;
  background-color: white;
  padding: 11px 20px;
}

.bigvenzel ::ng-deep svg {
  height: 60px;
}
