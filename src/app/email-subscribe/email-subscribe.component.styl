
@import '../../style-params.styl';

input:focus {
  outline: none;
}

input {
  border-right: none;
  font-size: $font-size--small;
}

form {
  display: flex;
}

form button {
  margin: 0;
  border: $border;
  border-radius: 0 5px 5px 0;
  background-color: white;
  padding: 11px 20px;
}

.success {
  color: $color-right;
  font-size: 16px;
  font-weight: bold;
}
