@import '~@ngx-share/button/themes/default/default-theme.css';
@import './style-params.styl';
@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,500,900&display=swap');
@import url('https://fonts.googleapis.com/css?family=Crimson+Text&display=swap');

/* Application-wide Styles */
h1 {
  font-size: $font-size--h1;
  font-weight: normal;
  line-height: 1.2em;
  margin: 0.875rem 0;
  font-family: $serif-font-family;
  position: relative;
  display: block;
}

.title::before {
  content: 'тренажер правописания';
  font-size: 14px;
  font-family: $font-family;
  position: absolute;
  top: -1.6rem;
  left: 10.5rem;
}

h2 {
  color: #444;
  font-weight: lighter;
  font-size: $font-size--h2;
  line-height: $line-height;
  margin-block-end: 0.6rem;
}

html, body {
  min-height: 100%;
}

body {
  margin: 0;
  background-color: $color-background;
  line-height: $line-height;
}

body, input[type='text'] {
  color: $color-primary;
  font-family: $font-family;
  background-repeat: repeat;
}

.bg-image {
  position: fixed;
  left: 0;
  right: 0;
  z-index: -1;
  display: block;
  background-image: url('https://images.megapixl.com/940/9400084.jpg');
  width: 100%;
  height: 100%;
  -webkit-filter: blur(5px);
  -moz-filter: blur(5px);
  -o-filter: blur(5px);
  -ms-filter: blur(5px);
  filter: blur(5px);
  background-repeat: repeat;
}

.content {
  z-index: 9999;
}

* {
  margin: 0;
  padding: 0;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

.lid, h3 {
  font-size: $font-size--h3;
  line-height: $line-height;
  margin-block-end: 0.3rem;
}

p {
  margin: 0.6rem 0;
  line-height: $line-height;
}

button {
  background-color: $color-primary;
  color: $color-on-dark;
  border: none;
  padding: 0.4rem 1rem;
  border-radius: 4px;
  cursor: pointer;
  cursor: hand;
  margin: $font-size--h3 0;
  display: block;
  font-size: 1rem;
  text-decoration: none;
}

button:hover {
  background-color: $color-primary-hover;
}

.button-secondary {
  background-color: $color-secondary;
}

.button-secondary:hover {
  background-color: $color-secondary-hover;
}

.root {
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
}

.container {
  max-width: 700px;
  background-color: $color-background;
  height: 100vh;
  position: relative;
  padding: 12px;
}

@media only screen and (min-width: 32em) {
  .container {
    align-items: center;
    flex-grow: 0;
    width: 100%;
    padding: 10px 45px 5px;
  }
}
